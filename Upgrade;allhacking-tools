# Ø§Ù„ÙˆØ¸Ø§Ø¦Ù Ø§Ù„Ø®Ø§ØµØ© Ø¨ÙƒÙ„ Ø£Ø¯Ø§Ø©
def nmap_menu():
    clear_screen()
    print("\n[+] Nmap - Network Scanner\n")
    target = input("Enter target (IP or domain): ")
    os.system(f"nmap -A {target}")

def nikto_menu():
    clear_screen()
    print("\n[+] Nikto - Web Vulnerability Scanner\n")
    target = input("Enter target URL: ")
    os.system(f"nikto -h {target}")

def sqlmap_menu():
    clear_screen()
    print("\n[+] SQLmap - Database Exploitation\n")
    target = input("Enter vulnerable URL: ")
    os.system(f"sqlmap -u {target} --dbs")

def hydra_menu():
    clear_screen()
    print("\n[+] Hydra - Brute Force Tool\n")
    ip = input("Enter target IP: ")
    userlist = input("Enter path to username list: ")
    passlist = input("Enter path to password list: ")
    os.system(f"hydra -L {userlist} -P {passlist} {ip} ssh")

def metasploit_menu():
    clear_screen()
    print("\n[+] Metasploit - Exploitation Framework\n")
    os.system("msfconsole")

def gobuster_menu():
    clear_screen()
    print("\n[+] Gobuster - Directory and File Enumeration\n")
    target = input("Enter target URL: ")
    wordlist = input("Enter path to wordlist: ")
    os.system(f"gobuster dir -u {target} -w {wordlist}")

def john_menu():
    clear_screen()
    print("\n[+] John the Ripper - Password Cracking\n")
    hashfile = input("Enter path to hash file: ")
    os.system(f"john {hashfile}")

def theharvester_menu():
    clear_screen()
    print("\n[+] TheHarvester - Information Gathering\n")
    domain = input("Enter target domain: ")
    os.system(f"theHarvester -d {domain} -l 500 -b all")

def exploitdb_menu():
    clear_screen()
    print("\n[+] ExploitDB - Search for Exploits\n")
    search = input("Enter search term: ")
    os.system(f"searchsploit {search}")

def main_menu():
    check_and_install_tools()  # ØªØ«Ø¨ÙŠØª Ø§Ù„Ø£Ø¯ÙˆØ§Øª Ø¥Ø°Ø§ ÙƒØ§Ù†Øª Ù†Ø§Ù‚ØµØ©
    
    while True:
        clear_screen()
        banner()
        print("""
        [1] Nmap - Network Scanner
        [2] Nikto - Web Vulnerability Scanner
        [3] SQLmap - Database Exploitation
        [4] Hydra - Brute Force Tool
        [5] Metasploit - Exploitation Framework
        [6] Gobuster - Directory and File Enumeration
        [7] John the Ripper - Password Cracking
        [8] TheHarvester - Information Gathering
        [9] ExploitDB - Search for Exploits
        [0] Exit
        """)
        
        choice = input("Select an option: ")

        if choice == "1":
            nmap_menu()
        elif choice == "2":
            nikto_menu()
        elif choice == "3":
            sqlmap_menu()
        elif choice == "4":
            hydra_menu()
        elif choice == "5":
            metasploit_menu()
        elif choice == "6":
            gobuster_menu()
        elif choice == "7":
            john_menu()
        elif choice == "8":
            theharvester_menu()
        elif choice == "9":
            exploitdb_menu()
        elif choice == "0":
            print("Exiting... Stay Safe!")
            break
        else:
            print("Invalid option! Try again.")
        input("\nPress Enter to continue...")

if __name__ == "__main__":
    main_menu()
