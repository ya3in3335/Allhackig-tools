import os
import shutil

# قائمة الأدوات المطلوبة
TOOLS = {
    "nmap": "nmap",
    "nikto": "nikto",
    "sqlmap": "sqlmap",
    "hydra": "hydra",
    "metasploit-framework": "msfconsole",
    "gobuster": "gobuster",
    "john": "john",
    "theharvester": "theHarvester",
    "exploitdb": "searchsploit"
}

# فحص الأدوات وتثبيتها إذا لم تكن موجودة
def check_and_install_tools():
    missing_tools = [tool for tool, cmd in TOOLS.items() if not shutil.which(cmd)]
    
    if missing_tools:
        print("\n[+] Installing missing tools...")
        os.system(f"sudo apt update && sudo apt install -y {' '.join(missing_tools)}")
        print("\n[+] All tools are installed successfully!")
    else:
        print("\n[+] All required tools are already installed.")

# مسح الشاشة وعرض الواجهة الحماسية
def clear_screen():
    os.system('cls' if os.name == 'nt' else 'clear')

def banner():
    print("""
